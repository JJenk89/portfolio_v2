---
const pageTitle = Astro.props.title || "Web Developer";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-lrg.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>JJenk89 - {pageTitle}</title>
		<script is:inline>
			const preferredTheme = localStorage.getItem("theme") || "dark";
			document.documentElement.setAttribute("data-theme", preferredTheme);
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
