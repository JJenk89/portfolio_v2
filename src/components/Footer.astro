---
import "../styles/global.css";
import "../styles/footer.css";

// Dark mode icons
import insta from "../assets/icons/Instagram.svg";
import github from "../assets/icons/GitHub.svg";

// Light mode icons
import instaDark from "../assets/icons/Instagram-Dark.svg";
import githubDark from "../assets/icons/GitHub-Dark.svg";

const currentYear = new Date().getFullYear();
---

<footer>
	<p>Follow me on</p>
	<div class="footer-content">
		<ul class="social-links">
			<li>
				<a
					href="https://www.instagram.com/jjenk_89"
					target="_blank"
					rel="noopener noreferrer"
				>
					<img
						src={insta.src}
						alt="Instagram Icon"
						width="32"
						height="32"
						class="dark-mode-icon"
					/>
					<img
						src={instaDark.src}
						alt="Instagram Icon"
						width="32"
						height="32"
						class="light-mode-icon"
					/>
				</a>
			</li>
			<li>
				<a
					href="https://www.github.com/jjenk89"
					target="_blank"
					rel="noopener noreferrer"
				>
					<img
						src={github.src}
						alt="GitHub Icon"
						width="32"
						height="32"
						class="dark-mode-icon"
					/>
					<img
						src={githubDark.src}
						alt="GitHub Icon"
						width="32"
						height="32"
						class="light-mode-icon"
					/>
				</a>
			</li>
		</ul>
		<p>&copy; {currentYear} Jason Jenkinson. All rights reserved.</p>
		<div class="acknowledgements">
			<p>Photography by</p>
			<ul>
				<li>
					<a
						href="https://www.pexels.com/@luis-gomes-166706"
						target="_blank">Luis Gomes</a
					> &amp;
					<a
						href="https://www.pexels.com/@pramodtiwari"
						target="_blank">Pramod Tiwari</a
					> - Pexels
				</li>
			</ul>
		</div>
	</div>
</footer>
